<%= render 'admin/admin_menu' %>

<div class="row mb-3">
  <div class="col-md text-center text-md-start">
    <h1><%= @region.name %></h1>
  </div>
  <div class="col-md text-center text-md-end">
    <%= link_to raw('<i class="fas fa-pencil"></i> Edit'), edit_admin_region_path(@region), class: 'btn btn-secondary' %>
