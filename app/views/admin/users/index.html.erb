<% content_for :title, 'users' %>

<%= render 'admin/admin_menu' %>

<div class="row mb-3">
  <div class="col-md text-center text-md-start">
    <h1>Users</h1>
  </div>
  <div class="col-md text-center text-md-end">
    <%= link_to raw('<i class="fas fa-plus"></i> New'), new_admin_user_path, class: 'btn btn-primary' %>
  </div>
</div>

<div id="users" data-controller="admin">
  <table class="table table-admin">
    <thead>
      <tr>
        <th>Email</th>
        <th>Role</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.email, admin_user_path(user) %></td>
        <td><%= user.role %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
