<% content_for :title, @user.email %>

<%= render 'admin/admin_menu' %>

<div class="row mb-3">
  <div class="col-md text-center text-md-start">
    <h1><%= @user.email %></h1>
  </div>
  <div class="col-md text-center text-md-end">
    <%= link_to raw('<i class="fas fa-pencil"></i> Edit'), edit_admin_user_path(@user), class: 'btn btn-secondary' %>
  </div>
</div>

<%= render @user %>

<div class="my-3">
  <%= button_to "Delete user", admin_user_path(@user), method: :delete, class: 'btn btn-danger' %>
</div>
