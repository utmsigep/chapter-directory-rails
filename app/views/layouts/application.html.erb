<!DOCTYPE html>
<html>
  <head>
    <title>Chapter Directory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/09b66f5b11.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <script>
      var ImagePaths = {
        chapterIcon: "<%= asset_path('chapter.svg') %>",
        slcChapterIcon: "<%= asset_path('chapter-slc.svg') %>"
      }
    </script>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark nav-header mb-3">
      <div class="container-fluid">
        <a class="navbar-brand me-auto" href="<%= root_path() %>">Chapter Directory</a>
        <% if user_signed_in? %>
        <div class="text-light p-2">
          <%= link_to 'Site Admin', admin_path, class: 'text-light' %>
        </div>
        <div class="text-light p-2">
           <%= current_user.email %>
        </div>
        <%= button_to('Sign Out',  destroy_user_session_path, :method => 'delete', class: 'btn btn-light') %>
        <% end %>
      </div>
    </nav>

    <div class="container-fluid">
      <% if flash[:notice] %>
        <div class="alert alert-primary"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:error] %>
        <div class="alert alert-danger"><%= flash[:error] %></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
