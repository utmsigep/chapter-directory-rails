<%= form_with(model: region) do |form| %>
  <%= render'/save_error_details', record: region if region.errors.any? %>

  <div class="mb-3">
    <%= label_tag :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= label_tag :short_name %>
    <%= form.text_field :short_name, class: 'form-control' %>
  </div>
    <div class="mb-3">
    <%= label_tag :position %>
    <%= form.number_field :position, class: 'form-control' %>
  </div>
  <%= form.submit nil, class: 'btn btn-primary' %>
<% end %>
